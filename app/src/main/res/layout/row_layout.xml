<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ded11"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="408dp"
        android:layout_height="188dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-1dp">

        <ImageView
            android:id="@+id/imgBurger"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtBurger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:text="TextView"
            android:fontFamily="@font/tiktoksansbold"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="-9dp"
            android:text="TextView" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="11dp"
            android:layout_marginBottom="10dp"
            android:text="BUY NOW" />

        <Button
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="11dp"
            android:text="SEE MORE" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="408dp"
        android:layout_height="188dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="217dp">

        <ImageView
            android:id="@+id/imgBurger2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtBurger2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/tiktoksansbold"
            android:text="TextView"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-9dp"
            android:layout_marginTop="85dp"
            android:text="TextView" />

        <Button
            android:id="@+id/btnBuy2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="11dp"
            android:layout_marginBottom="10dp"
            android:text="BUY NOW" />

        <Button
            android:id="@+id/btnMore2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="10dp"
            android:text="SEE MORE" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>